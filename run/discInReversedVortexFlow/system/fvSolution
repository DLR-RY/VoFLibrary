FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        cAlpha          1;
        nAlphaSubCycles 1;

	    advectionScheme isoAdvection;

        reconstructionScheme plicRDF;

        vof2IsoTol 1e-8;
        surfCellTol 1e-8;
        writeVTK false;
    }
}

PIMPLE
{
    frozenFlow      yes;
    momentumPredictor no;
    nCorrectors     -1;
    nNonOrthogonalCorrectors -1;
    pRefCell        0;
    pRefValue       0;
}

